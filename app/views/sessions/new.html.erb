<h3>ログイン</h3>
<%= form_with scope: :session, local: true do |form| %>
  <div class="input-field">
    <!-- <label for="text">メールアドレス</label> -->
    <%= form.label :email, 'メールアドレス' %>
    <%= form.text_field :email, class: "validate", placeholder: "hoge@hogehoge.com" %>
  </div>
  <div class="input-field">
    <label for="text">パスワード</label>
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password, class: "validate" %>
  </div>
  <%= form.submit 'ログインする', class: 'waves-effect waves-light btn'  %>

<% end %>
